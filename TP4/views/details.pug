extends layout

block content
  .w3-card-4
    
    header.w3-container.w3-teal
      h2 Detalhes do Registo EMD

    .w3-container.w3-padding

      p
        b Data EMD:
        |  #{emd.dataEMD}

      p
        b Nome:
        |  #{emd.nome.primeiro} #{emd.nome.último}

      p
        b Idade:
        |  #{emd.idade}

      p
        b Género:
        |  #{emd.género}

      p
        b Morada:
        |  #{emd.morada}

      p
        b Modalidade:
        |  #{emd.modalidade}

      p
        b Clube:
        |  #{emd.clube}

      p
        b Email:
        |  #{emd.email}

      p
        b Federado:
        |  #{emd.federado ? "Sim" : "Não"}

      p
        b Resultado:
        |  #{emd.resultado ? "Apto ✔" : "Não Apto ✘"}

      br

      a.w3-btn.w3-grey(href="/emd") Voltar
      |  
      a.w3-btn.w3-blue(href=`/emd/editar/${emd.id}`) ✎ Editar
      |  
      a.w3-btn.w3-red(href=`/emd/apagar/${emd.id}`) ✖ Apagar