extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 EMD Records List 
    
    .w3-container
      table.w3-table-all.w3-margin-top
        tr
          th Nome
          th Data
          th Modalidade
          th Resultado

        each t in list
          tr(onclick=`window.location='/emd/${t.id}'` style="cursor:pointer")
            td= t.nome.primeiro
            td= t.dataEMD
            td= t.modalidade
            td= t.resultado ? "✔" : "✘"